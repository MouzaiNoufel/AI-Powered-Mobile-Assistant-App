# Backend Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai_assistant
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/ai_assistant

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# AI Usage Limits
AI_DAILY_LIMIT_FREE=10
AI_DAILY_LIMIT_PREMIUM=100
AI_MONTHLY_LIMIT_FREE=100
AI_MONTHLY_LIMIT_PREMIUM=3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Push Notifications (Firebase Cloud Messaging)
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-firebase-project-id

# Analytics
ANALYTICS_ENABLED=true

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Admin Configuration
ADMIN_EMAIL=admin@aiassistant.com
ADMIN_PASSWORD=SecureAdminPassword123!
